<h1>Login</h1>
 
<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  <p><%= f.submit "Submit" %></p>
  <p><%= link_to "Register", register_path %></p>
  <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
<% end %>
