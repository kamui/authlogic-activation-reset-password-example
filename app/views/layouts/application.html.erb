<!DOCTYPE html>
<html>
  <head>
    <title>Example</title>
  </head>
  <body>
    <ul>
      <% if current_user %>
        <% if current_user.admin? %>
          <li>
            <%= link_to "Admin", admin_path %>  
          </li>
        <% end %>
        <li>
          <%= link_to "Edit profile", edit_account_path %>  
        </li>
        <li class="last">
          <%= link_to "Logout", logout_path %> 
        </li>
      <% else %>
        <li class="last">
          <%= link_to "Login", login_path %> / <%= link_to "Register", register_path %>  
        </li>
      <% end %>
    </ul>

    <div>
      <%= yield %>
    </div>

  </body>
</html>